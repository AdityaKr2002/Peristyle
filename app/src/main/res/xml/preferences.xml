<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:layout="@layout/preferences_toolbar" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/home" />

    <CheckBoxPreference
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="false"
        app:key="is_name"
        app:summary="@string/show_wallpaper_names_on_the_main_screen"
        app:title="@string/enabled_wallpaper_names" />

    <CheckBoxPreference
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="false"
        app:key="is_details"
        app:summary="@string/show_wallpaper_details_on_the_main_screen"
        app:title="@string/enabled_wallpaper_details" />

    <CheckBoxPreference
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="false"
        app:key="blur"
        app:summary="@string/blur_summary"
        app:title="@string/blur" />

    <ListPreference
        app:defaultValue="3"
        app:entries="@array/grid_span"
        app:entryValues="@array/grid_span_values"
        app:iconSpaceReserved="false"
        app:key="grid_span"
        app:summary="@string/grid_span_summary"
        app:title="@string/grid_span"
        app:useSimpleSummaryProvider="false" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/engine" />

    <CheckBoxPreference
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="false"
        app:key="is_app_engine"
        app:summary="@string/app_engine_summary"
        app:title="@string/enable_app_engine" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/security" />

    <CheckBoxPreference
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="false"
        app:key="is_biometric"
        app:summary="@string/biometric_summary"
        app:title="@string/enable_biometric" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/data" />

    <Preference
        android:title="@string/clear_cache"
        app:iconSpaceReserved="false"
        app:key="clear_cache"
        app:summary="@string/clear_cache_summary" />


    <Preference
        android:title="@string/recreate_database"
        app:iconSpaceReserved="false"
        app:key="recreate_database"
        app:summary="@string/recreate_database_summary" />

    <Preference
        android:title="@string/change_directory"
        app:iconSpaceReserved="false"
        app:key="change_directory"
        app:summary="@string/change_directory_desc" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/about" />

    <Preference
        app:iconSpaceReserved="false"
        app:key="info"
        app:summary="@string/full_info"
        app:title="" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/other_apps" />

    <Preference
        app:icon="@drawable/positional"
        app:key="positional"
        app:summary="@string/positional_summary"
        app:title="@string/positional" />

    <Preference
        app:icon="@drawable/inure"
        app:key="inure"
        app:summary="@string/inure_app_manager_summary"
        app:title="@string/inure_app_manager" />

</PreferenceScreen>
