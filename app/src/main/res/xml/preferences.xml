<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    <PreferenceCategory app:layout="@layout/preferences_toolbar" />-->

    <PreferenceCategory
        app:allowDividerAbove="false"
        app:iconSpaceReserved="true"
        app:title="@string/home" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_label"
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="is_name"
        app:summary="@string/show_wallpaper_names_on_the_main_screen"
        app:title="@string/enabled_wallpaper_names" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_description"
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="is_details"
        app:summary="@string/show_wallpaper_details_on_the_main_screen"
        app:title="@string/enabled_wallpaper_details" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_blur"
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="blur"
        app:summary="@string/blur_summary"
        app:title="@string/blur" />

    <ListPreference
        android:icon="@drawable/ic_grid"
        app:defaultValue="3"
        app:entries="@array/grid_span"
        app:entryValues="@array/grid_span_values"
        app:iconSpaceReserved="true"
        app:key="grid_span"
        app:summary="@string/grid_span_summary"
        app:title="@string/grid_span"
        app:useSimpleSummaryProvider="false" />

    <ListPreference
        android:icon="@drawable/ic_contrast"
        app:defaultValue="1"
        app:entries="@array/main_screen_background"
        app:entryValues="@array/main_screen_background_values"
        app:iconSpaceReserved="true"
        app:key="main_screen_background"
        app:summary="@string/main_screen_background_summary"
        app:title="@string/main_screen_background"
        app:useSimpleSummaryProvider="false" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_pin_drop"
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="remember_scroll_position"
        app:summary="@string/remember_scroll_position_summary"
        app:title="@string/remember_scroll_position" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/accessibility" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_delete_sweep"
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="swipe_to_delete"
        app:summary="@string/swipe_to_delete_summary"
        app:title="@string/swipe_to_delete" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_margin"
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="margin_between_wallpapers"
        app:summary="@string/margin_between_wallpapers_summary"
        app:title="@string/margin_between_wallpapers" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_motion"
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="reduce_motion"
        app:summary="@string/reduce_motion_summary"
        app:title="@string/reduce_motion" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/scheduling" />

    <ListPreference
        android:entries="@array/auto_wallpaper_interval"
        android:entryValues="@array/auto_wallpaper_interval_values"
        android:icon="@drawable/ic_schedule"
        app:defaultValue="0"
        app:enabled="true"
        app:entries="@array/auto_wallpaper_interval"
        app:entryValues="@array/auto_wallpaper_interval_values"
        app:iconSpaceReserved="true"
        app:key="auto_wallpaper_interval_1"
        app:summary="@string/auto_wallpaper_summary"
        app:title="@string/auto_wallpaper" />

    <ListPreference
        android:entries="@array/set_for_screen"
        android:entryValues="@array/set_for_screen_values"
        app:defaultValue="3"
        app:iconSpaceReserved="true"
        app:key="auto_wallpaper_set_for"
        app:summary="@string/auto_wallpaper_set_for_summary"
        app:title="@string/auto_wallpaper_set_for" />

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="crop_wallpaper"
        app:summary="@string/crop_wallpaper_summary"
        app:title="@string/crop_wallpaper" />

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="different_wallpaper_for_lock_screen"
        app:title="@string/different_wallpaper_for_lock_screen" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="wallpaper_when_landscape"
        app:title="@string/change_wallpaper_when_sleeping" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/security" />

    <SwitchPreferenceCompat
        android:icon="@drawable/ic_fingerprint"
        app:defaultValue="false"
        app:enabled="true"
        app:iconSpaceReserved="true"
        app:key="is_biometric"
        app:summary="@string/biometric_summary"
        app:title="@string/enable_biometric" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/data" />

    <Preference
        android:title="@string/clear_cache"
        app:iconSpaceReserved="true"
        app:key="clear_cache"
        app:summary="@string/clear_cache_summary" />


    <Preference
        android:title="@string/recreate_database"
        app:iconSpaceReserved="true"
        app:key="recreate_database"
        app:summary="@string/recreate_database_summary" />

    <Preference
        android:title="@string/change_directory"
        app:iconSpaceReserved="true"
        app:key="change_directory"
        app:summary="@string/change_directory_desc" />

    <Preference
        android:title="@string/library_stats"
        app:iconSpaceReserved="true"
        app:key="library_stats"
        app:summary="@string/library_stats_desc" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/about" />

    <Preference
        app:iconSpaceReserved="true"
        app:key="info"
        app:summary="@string/full_info"
        app:title="" />

    <PreferenceCategory
        app:iconSpaceReserved="true"
        app:title="@string/other_apps" />

    <Preference
        app:icon="@drawable/inure"
        app:key="inure"
        app:summary="@string/inure_app_manager_summary"
        app:title="@string/inure_app_manager" />

    <Preference
        app:icon="@drawable/positional"
        app:key="positional"
        app:summary="@string/positional_summary"
        app:title="@string/positional" />

</PreferenceScreen>
